<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhenxin.medicine.reminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.zhenxin.medicine.reminder.AlarmManagerActivity"
            android:label="@string/title_activity_notification" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -
        </activity>
        <!-- Broadcast receiver -->
        <receiver android:name="com.zhenxin.medicine.reminder.AlarmManagerBroadcastReceiver" >
        </receiver>

        <activity
            android:name="com.zhenxin.medicine.reminder.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
        <activity
            android:name="com.zhenxin.medicine.reminder.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".AlarmListActivity" />
        
        <activity android:name=".ScannerActivity" />
        
        <activity android:name=".SocialActivity" />
    </application>

</manifest>