<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhenxin.medicine.reminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:icon="@drawable/zx_logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.zhenxin.medicine.reminder.AlarmManagerActivity"
            android:label="@string/title_activity_notification" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <!-- Broadcast receiver -->
        <receiver android:name="com.zhenxin.medicine.reminder.AlarmManagerBroadcastReceiver" >
        </receiver>

        <activity
            android:name="com.zhenxin.medicine.reminder.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
        <activity
            android:name="com.zhenxin.medicine.reminder.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhenxin.medicine.reminder.CameraTestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.zhenxin.medicine.reminder.AlarmListActivity" />
        <activity android:name="com.zhenxin.medicine.reminder.ScannerActivity" />
        <activity android:name="com.zhenxin.medicine.reminder.SocialActivity" />
        <activity
            android:name="com.zhenxin.medicine.reminder.AlarmViewActivity"
            android:label="@string/title_activity_alarm_view" >
        </activity>
    </application>

</manifest>